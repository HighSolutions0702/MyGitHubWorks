.wrapper {
  position: relative;
  display: flex;
  justify-content: center;
}
.content {
  display: block;
}
.videoContent {
	width: 100%;
	height: 50vw;
	background-size: cover;
	background-position: center center;
	position: relative;
	display: block;
}

.shadowContent {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	background: rgba(0,0,0, .7);
}