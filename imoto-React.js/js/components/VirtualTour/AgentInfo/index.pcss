@import url("../../../../styles/constant.css");

.wrapper {
  background-color: #f8f8f8;
  border: 1px solid #e3e3e3;
}
.header {
  color: #404040;
  font-family: Montserrat;
  font-size: 28px;
  font-weight: 600;
  letter-spacing: 1.95px;
  line-height: 37px;
  margin: 117px auto 75px;
  text-align: center;
}
.row {
  display: flex;
  justify-content: center;
  margin-bottom: 132px;
  overflow: hidden;
}
.agent-photo {
  margin-right: 84px;
}
.agent-photo img {
  width: 100%;
  display: block;
}
.agent-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 370px;
  height: 300px;
  padding: 30px 0 28px;
  text-align: center;
}
.agent-name {
  color: #404040;
  font-family: Montserrat;
  font-size: 24px;
  font-weight: 600;
  letter-spacing: 1.67px;
  line-height: 32px;
}
.info-row {
  color: #5b5b5b;
  font-family: Montserrat;
  font-size: 18px;
  letter-spacing: 1.25px;
  line-height: 24px;
  border-bottom: 1px solid #e3e3e3;
  padding-bottom: 20px;
}
.name {
  font-weight: 600;
}
.description {
  font-weight: 300;
}
.email {
  font-weight: 300;
  color: #ff8402;
}

@media screen and (max-width: $the-tablet) {
  .row {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .agent-photo {
    margin-right: 0;
  }
}

@media screen and (max-width: $mobile) {
  .header {
    margin: 25px 0 50px;
  }
  .row {
    margin-bottom: 80px;
  }
}