.galleryItem {
  background-size: cover;
  background-position: center center;
  position: relative;
}

.galleryItem .hoverShow {
  opacity: 0;
  transition: opacity .3s;
  width: 80px;
  height: auto;
}

.galleryItem .toggle{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 100%;
  height: 100%;
}

.galleryItem .toggle:hover {
  cursor: pointer;
}

.galleryItem:hover .hoverShow {
  opacity: 1;
}